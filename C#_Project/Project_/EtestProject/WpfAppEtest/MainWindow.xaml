<Window x:Class="WpfAppEtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEtest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkSeaGreen">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Username:" FontSize="15"/>
            <TextBox Name="UsernameTextBox" Width="200" Height="32"/>
            <Label Content="Password:" FontSize="15"/>
            <PasswordBox Name="PasswordTextBox" Width="200" Height="32"/>


            <Label Content="Login as:" FontSize="15" />
            <RadioButton Content="Im'Student " FontSize="15" Name="LoginS"  />
            <RadioButton Content="Im'Teacher" FontSize="15" Name="LoginT"/>


            <Button Content="Login" FontSize="20" Click="LoginButton_Click" Height="37"/>
            <TextBlock Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>

</Window>
